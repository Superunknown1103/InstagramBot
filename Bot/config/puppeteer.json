{
    "base_url": "https://www.instagram.com/accounts/login/?source=auth_switcher",
    "username": "bruceyb31",
    "password": "Jaguar5000!!",
    "scrapeLimit": 20,
    "settings": {
        "run_every_x_hours": 3,
        "like_ratio": 0.75,
        "unfollow_after_days": 4,
        "headless": false,
        "messageText": "Hello! Its nice to meet you. I hope we can be friends. :)"
    },
    "selectors": {
            "username": {
                "value": "input[name='username']",
                "type": "css"
            },
            "password": {
                "value": "input[name='password'" ,
                "type": "css"
            },
            "login": {
                "value": "//div[contains(text(), 'Log In')]",
                "type": "xpath"
            },
            "notnow": {
                "value": "//button[contains(text(), 'Not Now')]",
                "type": "xpath"
            },
            "follow": {
                "value": "//button[contains(text(), 'Follow')]",
                "type": "xpath"
            },
            "unfollow": {
                "value": "svg[aria-label='Down Chevron Icon'][fill='#262626']",
                "type": "css"
            },
            "confirmUnfollow": {
                "value": "//button[contains(text(), 'Unfollow')]",
                "type": "xpath"
            },
            "followers": {
                "value": "//a[contains(@href,'/followers/')]",
                "type":"xpath"
            },
            "followerInstance": {
                "value": "//span//a[@tabindex and @title]",
                "type": "xpath"
            },
            "messageBtn": {
                "value": "//button[contains(text(), 'Message')]",
                "type": "xpath"
            },
            "messageBox": {
                "value": "textarea[placeholder='Message...']", 
                "type": "css"
            },
            "acceptAllCookies": {
                "value": "//button[contains(text(), 'Accept')]",
                "type": "xpath"
            },
            "sendMsg": {
                "value": "//button[contains(text(), 'Send')]",
                "type": "xpath"
            }
    }
